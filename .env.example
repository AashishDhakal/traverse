# Environment Variables for Traverse The Himalayas
# Copy this file to .env and update with your values

# ======================
# Django Core
# ======================
DEBUG=True
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ======================
# Database (PostgreSQL)
# ======================
# Local PostgreSQL
DATABASE_URL=postgres://postgres:password@localhost:5432/traverse_db

# ======================
# Redis Cache (optional)
# ======================
REDIS_URL=redis://localhost:6379/1

# ======================
# Static & Media (Production)
# ======================
# Leave empty for development (uses default paths)
# Set for production deployment
# STATIC_ROOT=/var/www/traverse/static
# MEDIA_ROOT=/var/www/traverse/media

# ======================
# Site Configuration
# ======================
SITE_DOMAIN=traversethehimalayas.com
SITE_NAME=Traverse The Himalayas

# ======================
# Email (configure for production)
# ======================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ======================
# Social Media
# ======================
TWITTER_HANDLE=@traversehimalaya
FACEBOOK_URL=https://facebook.com/traversethehimalayas
INSTAGRAM_URL=https://instagram.com/traversethehimalayas

# ======================
# SEO
# ======================
META_FB_APP_ID=
META_TWITTER_SITE=@traversehimalaya
